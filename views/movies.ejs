<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movies Database</title>
  </head>
  <body>
    <%- include('partials/header') %>
    <h1 class="text-center">Movie Rental Database</h1>
    <div class="row">
      <div class="col-1"></div>
      <div class="col">
        <a href="/add-movie" class="btn btn-primary mt-3">Add Movie</a>
      </div>
      <div class="col-1"></div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-1"></div>
        <div class="col">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Genre</th>
                <th>Rating</th>
                <th></th>
                <th></th>
              </tr>
              <% movies.forEach(movie=>{ %>
              <tr>
                <td><%= movie._id %></td>
                <td><%= movie.title %></td>
                <td><%= movie.genre %></td>
                <td><%= movie.rating %></td>
                <td>
                  <a href="/movies/update/<%= movie.id %>" class="btn btn-info"
                    >Edit</a
                  >
                </td>
                <td>
                  <a
                    href="/movies/delete/<%= movie._id %>"
                    class="btn btn-danger"
                    >Delete</a
                  >
                </td>
              </tr>

              <% }) %>
            </thead>
          </table>
        </div>
        <div class="col-1"></div>
      </div>
    </div>
  </body>
</html>
